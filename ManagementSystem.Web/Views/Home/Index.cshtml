@using PagedList.Mvc
@model PagedList.IPagedList<ManagementSystem.Web.ViewModels.TaskViewModel>

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h2>Management System</h2>
    <p class="lead"></p>
</div>

<div class="row">
    <table class="table table-hover">
        <thead>
        <tr>
            <th>Id</th>
            <th>Description</th>
            <th>Task Type</th>
            <th>Status</th>
            <th>Created Date</th>
            <th>Next Action Date</th>
            <th>Details</th>
        </tr>
        </thead>
        <tbody>
        @Html.DisplayFor(x => x)
        </tbody>
    </table>
    <div class="col-md-4">
        <h2></h2>
        <p>

        </p>
    </div>
</div>
@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))